{
  "$schema": "https://turbo.build/schema.json",

  "globalDependencies": ["**/.env.*local"],

  "globalEnv": ["NODE_ENV", "DATABASE_URL", "NEXT_PUBLIC_*"],

  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },

    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "!.next/cache/**"],
      "env": ["NODE_ENV"]
    },

    "start": {
      "dependsOn": ["build"],
      "cache": false
    },

    "test": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts"],
      "outputs": []
    },

    "lint": {
      "cache": false,
      "outputs": []
    },

    "type-check": {
      "outputs": []
    },

    "clean": {
      "cache": false
    }
  }
}
