{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "incremental": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/config/*": [
        "./src/config/*"
      ],
      "@/modules/*": [
        "./src/modules/*"
      ],
      "@/prisma/*": [
        "./src/prisma/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictBindCallApply": false,
    "strictNullChecks": false,
    "target": "ES2021"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "10.3.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@types/lodash": "^4.17.21",
    "@types/multer": "^2.0.0",
    "axios": "^1.13.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cloudinary": "^2.8.0",
    "install": "^0.13.0",
    "lodash": "^4.17.21",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.3.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.10",
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.3"
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "name": "@projeto-feedback-prod/backend",
  "private": true,
  "scripts": {
    "build": "nest build",
    "clean": "rm -rf dist",
    "dev": "nest start --watch",
    "lint": "eslint src --ext .ts --fix",
    "start": "node dist/main",
    "test": "jest"
  },
  "version": "0.1.0"
}
