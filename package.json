{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "dependencies": {
    "@eslint/js": "^9.39.2",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "devDependencies": {
    "globals": "^16.5.0",
    "turbo": "^2.6.3"
  },
  "exclude": [
    "node_modules",
    "packages/*/dist",
    "packages/*/build"
  ],
  "name": "projeto-feedback-prod",
  "packageManager": "bun@1.3.4",
  "private": true,
  "scripts": {
    "backend:add": "cd packages/backend && bun add",
    "both:add": "cd packages/backend && bun add $1 && cd ../frontend && bun add $1",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev --parallel",
    "dev:turbo": "turbo run dev --parallel",
    "dev:frontend": "cd packages/frontend && bun run dev ",
    "dev:backend": "cd packages/backend && bun run dev",
    "frontend:add": "cd packages/frontend && bun add",
    "install:all": "bun install && cd packages/backend && bun install && cd ../frontend && bun install",
    "install:axios": "cd packages/backend && bun add axios && cd ../frontend && bun add axios",
    "install:date-fns": "cd packages/backend && bun add date-fns && cd ../frontend && bun add date-fns",
    "install:lodash": "cd packages/backend && bun add lodash && cd ../frontend && bun add lodash",
    "reset": "rm -rf node_modules packages/*/node_modules && bun install",
    "start": "turbo run start --parallel",
    "tsc:frontend": "cd packages/frontend && bun run tsc --noEmit",
    "tsc:backend": "cd packages/backend && bun run tsc --noEmit",
    "type-check": "turbo run type-check"
  },
  "version": "1.0.0",
  "workspaces": [
    "packages/backend",
    "packages/frontend",
    "packages/*"
  ]
}
